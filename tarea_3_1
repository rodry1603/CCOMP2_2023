#include <iostream>
using namespace std;

class array_re{
  public:
  int arr[10];
  int *head=nullptr;
  int *tail=nullptr;
  int *aux=nullptr;
  bool push (int n);
  bool pop (int &n);
  void print ();
};

bool array_re::push (int n){
  if (head == nullptr && tail == nullptr){
    head=arr;
    tail=arr;
  }else if(head == arr && tail == arr+9){
    return false;
  }else if(head != arr && tail == arr+9){
    tail=arr;
    aux=arr;
  }else{
    tail++;
  }
  *tail=n;
  return true;
}

bool array_re::pop(int &n){
  if(head == nullptr && tail == nullptr){
    return false;
  }else if(head== arr+9 && aux == arr){
    head=arr;
  }else if(head == tail){
    head=nullptr;
    tail=nullptr;
    aux=nullptr;
    return false;
  }else{
    head++;
  }
  n=*head;
  return true;
}

void array_re::print() {
    if (head == nullptr || tail == nullptr) {
        cout << "La cola estÃ¡ vacia." << endl;
        return;
    }
    cout << "Elementos en la cola: ";
    int *current = head;
    while (current != tail) {
        cout << *current << " ";
        if (current == arr + 9) {
            current = arr;
        }
        else {
            current++;
        }
    }
    cout << *current << endl;
}

int main(){
  array_re a;
  for(int i=1;i<=12;++i){
    a.push(i);
  }
  a.print();
  int x;
  a.pop(x);
  a.pop(x);
  a.pop(x);
  
  a.print();
  
  a.push(15);
  a.push(16);
  a.push(17);
  
  a.print();
}
